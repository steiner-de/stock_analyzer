[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    notebooks

ignore =
    E203,
    E501,
    W503,
    W504

per-file-ignores =
    __init__.py:F401

docstring-convention = google

# Complexity settings
max-complexity = 10
